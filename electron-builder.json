{
  "appId": "com.legiscorp.garros",
  "productName": "Legiscorp Garros",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "node_modules/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "publisherName": "Legiscorp Garros",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Legiscorp Garros",
    "include": "installer.nsh"
  },
  "publish": null
}